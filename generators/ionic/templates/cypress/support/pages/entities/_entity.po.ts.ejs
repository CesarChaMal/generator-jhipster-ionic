import { EntityComponentsPage, EntityDetailPage, EntityUpdatePage } from '../../entity.po';

export class <%= entityClass %>ComponentsPage extends EntityComponentsPage {
  pageSeletor = 'page-<%= entityFileName %>';
}

export class <%= entityClass %>UpdatePage extends EntityUpdatePage{
  pageSeletor = 'page-<%= entityFileName %>-update';

<%_ for (field of fields.filter(field => !field.id)) { _%>
  <%_ if (field.fieldTypeZonedDateTime) { _%>
  <%= field.fieldName %>InputSelector = `${this.pageSeletor} ion-datetime[formControlName="<%= field.fieldName %>"] input`;
  <%_ } else { _%>
  <%= field.fieldName %>InputSelector = `${this.pageSeletor} ion-input[formControlName="<%= field.fieldName %>"] input`;
  <%_ } _%>
<%_ } _%>
<%_ for (field of fields.filter(field => !field.id)) { _%>

  set<%= field.fieldNameCapitalized %>Input(<%= field.fieldName %>: string) {
    cy.get(this.<%= field.fieldName %>InputSelector).type(<%= field.fieldName %>);
  }
<%_ } _%>
}

export class <%= entityClass %>DetailPage extends EntityDetailPage {
  pageSeletor = 'page-<%= entityFileName %>-detail';
<%_ for (field of fields.filter(field => !field.id)) { _%>

  get<%= field.fieldNameCapitalized %>Content() {
    return cy.get('#<%= field.fieldName %>-content');
  }
<%_ } _%>
}
