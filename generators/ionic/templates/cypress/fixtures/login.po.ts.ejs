import { Page } from './app.po';

export class LoginPage extends Page {
  <%_ if (authenticationType === 'oauth2') { _%>
  username = cy.get('input[name="username"');
  passowrd = cy.get('input[name="password"');
  // button on IdP sign-in form
  loginButton = cy.get('input[type=submit]');
  <%_ } else { _%>
  username = cy.get('.ion-input[name="username"] input');
  password = cy.get('.ion-input[name="password"] input');
  loginButton = cy.get('#login');
  <%_ } _%>
  signInButton = cy.get('#signIn');
  logoutButton = cy.get('#logout');
  header = cy.get('.ion-title');

  getHeader() {
    return this.header;
  }

  setUserName(username) {
    this.username.type(username);
  }

  getUserName() {
    return this.username;
  }

  clearUserName() {
    this.username.clear();
  }

  setPassword(password) {
    this.password.type(password);
  }

  getPassword() {
    return this.password;
  }

  clearPassword() {
    this.password.clear();
  }

  login(username: string, password: string) {
    <%_ if (authenticationType === 'oauth2') { _%>
    if (this.username) {
      this.username.type(username);
      this.password.type(password);
      this.loginButton.click();
    }
    <%_ } else { _%>
    this.setUserName(username);
    this.setPassword(password);
    this.loginButton.click();
    <%_ } _%>
  }

  logout() {
    this.logoutButton.click();
  }
}
